---

	import MainLayout from '../layouts/MainLayout.astro';

	//Server Only
	const name = 'Isaac Hdez Castro';
	const title = 'Mi sitio web';
---

<MainLayout title='Mi sitio web' name='Home Page'>
	<h1>{name}</h1>

		<p>Momento actual: { new Date().toLocaleTimeString() }</p>
		<p id="current-time">Momento actual real:</p>

		<script>
			const timeParagraph = document.querySelector('#current-time') as HTMLParagraphElement;

			const currentTime: string = new Date().toLocaleTimeString();

			timeParagraph.innerText = `Momento actual real: ${ currentTime }`;

		</script>
</MainLayout>
